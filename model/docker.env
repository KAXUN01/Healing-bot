# Docker Environment Configuration for DDoS Detection System

# DDoS Detection System
DASHBOARD_PORT=5000
DETECTION_THRESHOLD=0.7
BLOCK_DURATION=3600
MAX_ATTACKS_PER_IP=3

# DDoS Model API
MODEL_PORT=8080
MODEL_HOST=0.0.0.0

# Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

# Redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=INFO

# Network
NETWORK_NAME=ddos-network
